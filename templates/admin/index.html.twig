{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Admin</h1>

    <ul>
        {% for message in messages %}
        <li>
            {% if message.accepted %}
                [OK]
            {% else %}
                <a href="{{ path('admin_acceptation', {id: message.id}) }}">[valider]</a>
            {% endif %}

            {{ message.date|date("m/d H:i") }}
            -
            {{ message.nom }}
            -
            {{ message.message }}
        </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}
