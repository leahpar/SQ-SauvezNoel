{% extends 'base.html.twig' %}

{% block body %}

    <div class="screenWrapper">
        <div id="compteurWrapper">
            <!-- Compteur de messages -->
            <span id="compteur">0</span>
            Soutiens
        </div>

        <footer>

            <div class="cta">
                <div class="qrcode">
                    <!-- QR Code -->
                    {% set url = absolute_url(path('user_index')) %}
                    <img src="https://chart.googleapis.com/chart?cht=qr&chs=300x300&chld=L&chl={{ url }}"
                         crossorigin="anonymous"
                         decoding="async"
                         referrerpolicy="origin-when-cross-origin"
                         width="300px"
                         height="300px">
                </div>
                <p>Envoyez vos messages de soutien sur <strong>sosnoel.fr</strong></p>
            </div>

            <div id="messagesWrapper" class="messagesWrapper">
                <!-- Message courant -->
            </div>

            <div id="messages" style="display: none">
                <!-- Messages en stock -->
            </div>

        </footer>


        <!-- Template pour les messages -->
        <template data-type="message" style="display: none">
            <div class="msg"><p><strong>__message__</strong>, __nom__</p></div>
        </template>

    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('/js/screen.js') }}"></script>
{% endblock %}

