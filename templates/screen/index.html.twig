{% extends 'base.html.twig' %}

{% block body %}

<div class="screenWrapper">
    <div id="compteurWrapper">
        <!-- Compteur de messages -->
        <span id="compteur">0</span>
        Soutiens
    </div>
    
    <footer>
        
        <div class="cta">
            <div class="qrcode">
                <!-- QR Code -->
                {% set url = absolute_url(path('user_index')) %}
                <img src="https://chart.googleapis.com/chart?cht=qr&chs=300x300&chld=L&chl={{ url }}" width="300px" height="300px">
            </div>
            <p>Envoyez vos messages de soutien sur <strong>sosnoel.fr</strong></p>
        </div>
        
        <div class="messagesWrapper">
            <div class="msg"><p><strong>C'est vraiment un Super</strong>, Mathieu L</p></div>
            
            <ul id="messages">
                <!-- les nouveaux messages seront ajoutÃ©s ici -->
            </ul>
            
        </div>
        
    </footer>

    

    

    <!-- Template pour les messages -->
    <template data-type="message" style="display: none">
        <li>
            <span>__message__</span>
            [<span>__nom__</span>]
        </li>
    </template>

</div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('/js/screen.js') }}"></script>
{% endblock %}

